<%- model_class = OjibweWord -%>
<div class="page-header">
  <h1><%=t '.title', :default => OjibweWord %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:english_word) %></dt>
      <dd><pre class="prettyprint"><%= @ojibwe_word.english_word %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ojibwe_translation) %></dt>
      <dd><pre class="prettyprint"><%= @ojibwe_word.ojibwe_translation %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:word_type) %></dt>
      <dd><pre class="prettyprint"><%= @ojibwe_word.word_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:catagory) %></dt>
      <dd><pre class="prettyprint"><%= @ojibwe_word.catagory %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:dictionary) %></dt>
      <dd><pre class="prettyprint"><%= @ojibwe_word.dictionary %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:dialect_locale) %></dt>
      <dd><pre class="prettyprint"><%= @ojibwe_word.dialect_locale %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ojibwe_words_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ojibwe_word_path(@ojibwe_word), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ojibwe_word_path(@ojibwe_word),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

